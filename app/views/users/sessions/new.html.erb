<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>DigitalBank</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= stylesheet_link_tag    'users_backoffice' %>
  </head>

  <body class="login">
    <div>
      <a class="hiddenanchor" id="signup"></a>
      <a class="hiddenanchor" id="signin"></a>

      <div class="login_wrapper">
        <div class="animate form login_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <h1>Digital Bank</h1>
              <h2>Acessar a sua conta</h2>

              <% flash.each do |key, value| %>
                <div class="flash <%= key %>"><%= value %></div>
              <% end %>

              <div>
                <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control"  %>
              </div>
              <div>
                <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
              </div>

              <div class="p-2">
                <%= f.submit "Acessar", class:"btn btn-success btn-lg submit" %>
                <h4><%= link_to 'Esqueceu sua senha?', new_user_password_path, class:"btn btn-default submit" %></h4>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <h1>Cliente novo?</h1>
                <h4><%= link_to 'Criar Conta', new_user_session_path, class:"btn btn-primary btn-lg submit to_register", href:"#signup" %></h4>
                <br />
                <h4><%= link_to 'Voltar a Página Principal', root_path, class:"btn btn-default submit" %></h4>
              </div>
            <% end %>
          </section>
        </div>

        <div id="register" class="animate form registration_form">
          <section class="login_content">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <h1>Digital Bank</h1>
              <h2>Crie uma conta</h2>
              <%= render "users/shared/error_messages", resource: resource %>
              <div>
                <%= f.text_field :full_name, autofocus: true, placeholder:"Nome Completo", class:"form-control" %>
              </div>

              <div>
                <%= f.text_field :identification, autofocus: true, placeholder:"CPF", class:"form-control"  %>
              </div>

              <div>
                <%= f.text_field :phone, autofocus: true, placeholder:"Telefone", class:"form-control"  %>
              </div>

              <div>
                <%= f.email_field :email, autofocus: true, placeholder:"E-mail", class:"form-control"  %>
              </div>

              <div>
                <%= f.date_field :birthday, autofocus: true, placeholder:"Data de Nascimento", class:"form-control" %>
              </div>

              <div>
                <br>
                <%= f.password_field :password, placeholder:"Senha (No mínimo 6 caracteres)", class:"form-control" %>
              </div>

              <div>
                <%= f.password_field :password_confirmation, placeholder:"Confirme sua Senha", class:"form-control" %>
              </div>

              <div>
                <%= f.hidden_field :account_number, value: rand(100000...999999) %>
              </div>

              <div>
                <%= f.submit "Criar Conta", class:"btn btn-success btn-lg submit" %>
              </div>

              <div class="clearfix"></div>

              <div class="separator">
                <h1>Já é Cliente?</h1>
                <h4><%= link_to 'Acessar sua Conta', new_user_session_path, class:"btn btn-primary btn-lg submit to_register", href:"#signin" %></h4>
                <br />
                <h4><%= link_to 'Voltar a Página Principal', root_path, class:"btn btn-default submit" %></h4>
              </div>
            <% end %>
          </section>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'users_backoffice' %>

  </body>
</html>
